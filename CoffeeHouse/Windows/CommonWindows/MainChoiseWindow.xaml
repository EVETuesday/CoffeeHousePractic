<Window x:Class="CoffeeHouse.Windows.CommonWindows.MainChoiseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoffeeHouse.Windows.CommonWindows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen"
        Title="MainChoiseWindow" Height="700" Width="400">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resourses/Images/PngFormat/a5d152a89457eaf0d0f056d1152980a9.png"/>
        </Grid.Background>

        <Button x:Name="btnBack"
                Height="20"
                Content=">"
                FontSize="10"
                Padding="0 0 0 1"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="10"
                Background="Black"
                BorderBrush="#FF790303"
                Foreground="White"
                Click="btnBack_Click" Width="20"/>
        <StackPanel>
        <StackPanel Margin="60 50 60 0">

            <Button Style="{DynamicResource ButtonStyleRedius}"
                    x:Name="BtnAddProduct"
                    Height="50"
                    Margin="30 30 30 0"
                    Background="Black"
                    Content="Добавить новый товар"
                    FontSize="15"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="1"
                    BorderBrush="White"
                    
                    Click="BtnClick"/>

            <Button Style="{DynamicResource ButtonStyleRedius}"
                    x:Name="BtnChangeProduct"
                    Height="50"
                    Margin="30 30 30 0"
                    Background="Black"
                    Content="Изменить товар"
                    FontSize="15"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="1"
                    BorderBrush="White"
                    Click="BtnClick"/>

            <Button Style="{DynamicResource ButtonStyleRedius}"
                    x:Name="BtnDellProduct"
                    Height="50"
                    Margin="30 30 30 0"
                    Background="Black"
                    Content="Удалить товар"
                    FontSize="15"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="1"
                    BorderBrush="White"
                    Click="BtnClick"/>
        </StackPanel>
            <StackPanel Margin="60 50 60 0">
            <Button Style="{DynamicResource ButtonStyleRedius}"
                    x:Name="BtnAddEmployee"
                    Height="50"
                    Margin="30 30 30 0"
                    Background="Black"
                    Content="Добавить нового сотрудника"
                    FontSize="15"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="1"
                    BorderBrush="White"
                    
                    Click="BtnClick"/>

            <Button Style="{DynamicResource ButtonStyleRedius}"
                    x:Name="BtnChangeEmployee"
                    Height="50"
                    Margin="30 30 30 0"
                    Background="Black"
                    Content="Изменить сотрудника"
                    FontSize="15"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="1"
                    BorderBrush="White"
                    Click="BtnClick"/>

            <Button Style="{DynamicResource ButtonStyleRedius}"
                    x:Name="BtnDellEmployee"
                    Height="50"
                    Margin="30 30 30 0"
                    Background="Black"
                    Content="Удалить сотрудника"
                    FontSize="15"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="1"
                    BorderBrush="White"
                    Click="BtnClick"/>
        </StackPanel >


        </StackPanel>



    </Grid>
</Window>
